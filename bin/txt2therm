#!/usr/bin/env ruby
VERSION = "0.1.0"
APP     = "txt2therm"

trap("INT", "EXIT")

dir = "/dev/usb"
dev = Dir.entries(dir).find_all {|i| i =~ /^lp/ }.first
if dev
  DEVICE = "%s/%s" % [dir, dev]
else
  puts "printer not found"
  exit
end

unless File.writable?(DEVICE)
  puts "enter password to activate printer"
  require 'open3'
  if Open3.capture2("sudo echo success")[0] == "success\n"
    system("sudo chmod 666 #{DEVICE}")
  else
    puts "invalid password"
  end
end

# DEVICE CODES
NORMAL_WIDTH_AND_HEIGHT = [27, 33,  0]
DOUBLE_HEIGHT           = [27, 33, 16]
DOUBLE_WIDTH            = [27, 33, 32]
DOUBLE_WIDTH_AND_HEIGHT = [27, 33, 48]

require "slop"
opts = Slop.parse!(:help => true) do
  banner "usage: #{APP} [OPTIONS] [FILE]"
  separator "\nSend text to the thermal printer."

  separator "\nOptions:"
  on "t", "1x2", "Double height of text. (32 wide)"
  on "w", "2x1", "Double width of text. (16 wide)"
  on "d", "2x2", "Double width and height of text. (16 wide)"
  on "v", "version", "Print version information and exit." do
    puts "#{APP} v#{VERSION}"
    exit
  end
end

txt = if ARGV[0]
  File.read(ARGV[0]) if File.exist?(ARGV[0])
else
  STDIN.read
end

File.open(DEVICE, "w") do |dev|
  if opts["1x2"] or opts["2x1"] or opts["2x2"]
    if opts["2x2"] or (opts["1x2"] and opts["2x1"])
      DOUBLE_WIDTH_AND_HEIGHT
    elsif opts["1x2"]
      DOUBLE_HEIGHT
    elsif opts["2x1"]
      DOUBLE_WIDTH
    end.each do |ch|
      dev.write ch.chr
    end
  end

  dev.puts txt

  if opts["1x2"] or opts["2x1"] or opts["2x2"]
    NORMAL_WIDTH_AND_HEIGHT.each do |ch|
      dev.write ch.chr
    end
  end
end
